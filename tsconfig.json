{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,               // Allow JavaScript files
    "skipLibCheck": true,          // Skip type checking of declaration files
    "strict": true,                // Enable all strict type-checking options
    "esModuleInterop": true,       // Enable compatibility for ES modules
    "module": "esnext",            // Set the module system to ESNext
    "moduleResolution": "bundler", // Use bundler-style module resolution
    "resolveJsonModule": true,     // Allow importing JSON modules
    "jsx": "preserve",             // Keep JSX as-is for Next.js
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "noEmit": false,               // Set to false to allow emitting files
    "incremental": true,           // Enable incremental builds
    "isolatedModules": true         // Required for SWC/Babel
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*"                     // Include all source files
  ],
  "exclude": [
    "node_modules"
  ]
}
